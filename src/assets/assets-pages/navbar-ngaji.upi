    border: none;
    transition: background-color 0.2s ease;
}

.mobile-menu-login .btn-primary:hover {
    background-color: #228be6;
}

/* Overlay untuk mobile menu */
.mobile-menu-overlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 999;
    opacity: 0;
    transition: opacity 0.3s ease;
}

.mobile-menu-overlay.active {
    opacity: 1;
}

/* === Gaya Responsif untuk Mobile & Tablet === */
@media (max-width: 768px) {
    .notification-panel {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        margin-top: 0;
        border-radius: 0;
        border: none;
