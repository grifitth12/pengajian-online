}

.mobile-menu-login {
    padding: 1rem;
}

.mobile-menu-login .btn {
    width: 100%;
    padding: 1rem;
    text-align: center;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: 600;
    text-decoration: none;
