        transform: translateY(-100%);
    }

    .notification-panel.active {
        transform: translateY(0);
    }

    .notification-list {
        max-height: none;
    }

    /* Show mobile menu elements on mobile */
    .mobile-menu,
    .mobile-menu-overlay {
        display: block;
    }
}
    </style>
</head>
