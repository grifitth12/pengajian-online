                x-data="{ profile: null, baseUrl: '/static/' }"
                x-show="auth" class="nav-link" button class="profile-btn" id="profileBtnMobile">
               <img :src="profile.foto_url ? baseUrl + profile.foto_url : '/src/assets/images/default.png'" alt="Profile" class="profile-img" id="profileImgMobile">Profile
            </a>
