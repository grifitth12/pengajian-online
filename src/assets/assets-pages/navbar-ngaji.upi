    font-size: 2rem;
    color: #495057;
    cursor: pointer;
    padding: 0;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: color 0.2s ease;
}

.mobile-menu-close:hover {
    color: #212529;
}

.mobile-menu-content {
    padding: 1.5rem;
}

.mobile-menu-profile {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    background-color: #f8f9fa;
    border-radius: 12px;
    margin-bottom: 1.5rem;
}

.mobile-menu-profile-img {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid #339af0;
}

.mobile-menu-profile-info h3 {
    margin: 0 0 0.25rem 0;
    font-size: 1.1rem;
    color: #212529;
}

.mobile-menu-profile-info p {
    margin: 0;
    font-size: 0.875rem;
    color: #868e96;
}

.mobile-menu-nav {
    list-style: none;
    padding: 0;
    margin: 0;
}

.mobile-menu-nav li {
    margin-bottom: 0.5rem;
}

.mobile-menu-nav a {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    color: #495057;
    text-decoration: none;
    border-radius: 8px;
