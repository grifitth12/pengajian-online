<script>
    let id_donasi = window.location.href.split("/").at(-1)
    let now = new Date()
    let temp_id =
        now.getFullYear().toString() +
        String(now.getMonth() + 1).padStart(2, "0") +
        String(now.getDate()).padStart(2, "0") +
        String(now.getHours()).padStart(2, "0") +
        String(now.getMinutes()).padStart(2, "0") +
        String(now.getSeconds()).padStart(2, "0") +
        String(now.getMilliseconds()).padStart(3, "0")

    // CREATE DONASI
    async function create(params) {
        try {
            // 1. Insert donation
            let response = await axios.post("/api/donasi/insert", params)
            let row = response.data.data[0]
            let id_program_donasi = row?.id_program_donasi
            console.log(response.data)
            console.log(row)
            if (!id_program_donasi) {
                alert("Failed to create donasi, backend didnâ€™t return ID!")
                return
            }

            // 2. If thumbnail was uploaded, commit it
            if (window.tempThumbnail) {
                let finalFilename = await commitTemp(window.tempThumbnail, id_program_donasi)

                // 3. Update donasi record with committed filename
                await axios.put(`/api/donasi/update/` + id_program_donasi, {
                    id_program_donasi,
                    gambar: finalFilename
                })
            }

            alert("Donasi created successfully!")
        } catch (err) {
            console.error(err)
            alert("Error creating donasi")
        }
    }

    // UPLOAD TEMP
    async function selectPhoto(previewId, target) {
        let input = document.createElement("input")
        input.type = "file"
        input.accept = "image/*"

        input.onchange = async e => {
            let file = e.target.files[0]
            if (!file) return

            // preview
            let reader = new FileReader()
            reader.onload = ev => document.getElementById(previewId).src = ev.target.result
            reader.readAsDataURL(file)

            // upload temp
            let fd = new FormData()
            fd.append("file", file)
            fd.append("InternalId", temp_id)
            let res = await axios.post("/api/file/temp-thumbnail-upload", fd, {
                headers: { "Content-Type": "multipart/form-data" }
            })
            window[target] = res.data.filename // store temp filename
            document.getElementById(previewId).src = "/static/" + res.data.filename
        }

        input.click()
    }

    // COMMIT TEMP
    async function commitTemp(tempName, realId) {
        if (!tempName) return null
        let res = await axios.post("/api/file/commit-temp-thumbnail", {
            filename: tempName,
            InternalId: realId
        })
        return res.data.filename
    }

    async function close_popup() {
        document.getElementById("popup").classList.add("hidden")
    }
</script>
<!-- Main Content -->
<div id="upi-1" id="upi-1" upi-title="Create Donasi" class="content flex-1 overflow-auto">
    <!-- Main Content Area -->
    <main class="p-6" x-data="{DonasiForm : {}}">
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="p-6 border-b">
                <div class="flex justify-between items-center">
                    <h2 class="text-xl font-semibold text-gray-800">Create Donasi</h2>
                    <button @click="create(DonasiForm)" class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-lg flex items-center">
                        <i class="fas fa-save mr-2"></i> Save Changes
                    </button>
                </div>
            </div>

            <div class="p-6 grid grid-cols-1 md:grid-cols-3 gap-6">
                <!-- Left Column -->
                <div class="md:col-span-2 space-y-6">
                    <!-- Judul Donasi -->
                    <div>
                        <label for="judul" class="block text-sm font-medium text-gray-700 mb-1">Judul donasi</label>
                        <input type="text" x-model="DonasiForm.nama_program" id="judul" :value="DonasiForm.nama_program" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500">
                    </div>
                    <!-- Deskripsi -->
                    <div>
                        <label for="deskripsi" class="block text-sm font-medium text-gray-700 mb-1">Deskripsi</label>
                        <textarea id="deskripsi" x-model="DonasiForm.deskripsi" rows="5" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500" x-text="DonasiForm.deskripsi"></textarea>
                    </div>    
                    <!-- target-donasi -->
                    <div>
                        <label for="target-donasi" class="block text-sm font-medium text-gray-700 mb-1">Target Donasi</label>
                        <input type="number" x-model="DonasiForm.target_donasi" id="target-donasi" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500">
                    </div>
                    <!-- status -->    
                     <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label for="status" class="block text-sm font-medium text-gray-700 mb-1">Status</label>
                            <select id="status" x-model="DonasiForm.status" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500">
                                <option value="aktif" selected>Aktif</option>
                                <option value="Tutup">Tutup</option>
                                <option value="selesai">Selesai</option>
                            </select>
                        </div>
                    </div>          
                </div>


                <!-- Right Column -->
                <div class="space-y-6">
                    <!-- Thumbnail -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Thumbnail</label>
                        <div class="mt-1 flex flex-col items-center">
                            <img id="thumbnailPreview" src="http://127.0.0.1:8080/src/assets/images/banner.png" alt="Thumbnail Preview" class="thumbnail-preview w-full mb-2 rounded-lg border border-gray-300">
                            <div x-model="DonasiForm.thumbnail_url" class="flex space-x-2">
                                <input type="file" id="thumbnailUpload" class="hidden" accept="image/*">
                                <button onclick="selectPhoto('thumbnailPreview','tempThumbnail')" class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-lg text-sm">
                                    <i class="fas fa-upload mr-1"></i> Upload
                                </button>
                                <button id="removeThumbnail" class="bg-gray-200 hover:bg-gray-300 text-gray-700 px-4 py-2 rounded-lg text-sm">
                                    <i class="fas fa-trash mr-1"></i> Remove
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- qrCode-->
                     <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Qr code</label>
                        <div class="mt-1 flex flex-col items-center">
                            <img id="qrCode" src="http://127.0.0.1:8080/src/assets/images/banner.png" alt="qrCodeView" class="qrCodeView w-full mb-2 rounded-lg border border-gray-300">
                            <div x-model="donasi.gambar" class="flex space-x-2">
                                <input type="file" id="qrCodeUpload" class="hidden" accept="image/*">
                                <button onclick="document.getElementById('qrCodeUpload').click()" class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-lg text-sm">
                                    <i class="fas fa-upload mr-1"></i> Upload
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
